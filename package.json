{
  "name": "rest-rpc",
  "version": "1.0.0",
  "description": "A REST RPC library.",
  "main": "src/index.ts",
  "author": "Frederick Gnodtke",
  "license": "MIT",
  "scripts": {
    "build": "tsc --sourceMap",
    "test": "jest",
    "lint": "tslint --format stylish --type-check --project tsconfig.json",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "index.d.ts",
    "lib"
  ],
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "mapCoverage": true
  },
  "devDependencies": {
    "@types/jest": "^21.1.7",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "@types/express": "^4.0.39",
    "@types/http-status-codes": "^1.0.29",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "http-status-codes": "^1.3.0",
    "isomorphic-fetch": "^2.2.1",
    "path-to-regexp": "^2.1.0",
    "reflect-metadata": "^0.1.10"
  }
}
