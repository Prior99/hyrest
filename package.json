{
  "scripts": {
    "test": "jest",
    "lint": "tslint --format stylish --project tsconfig.json"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test//*.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "^hyrest$": "<rootDir>/packages/hyrest/src",
      "^hyrest-express$": "<rootDir>/packages/hyrest-express/src",
      "^hyrest-mobx$": "<rootDir>/packages/hyrest-mobx/src"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "jest-setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true,
        "ignoreCoverageForDecorators": true,
        "ignoreCoverageForAllDecorators": true
      }
    }
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/enzyme-to-json": "^1.5.2",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.7",
    "@types/react-test-renderer": "^16.0.2",
    "@types/supertest": "^2.0.5",
    "bind-decorator": "^1.0.11",
    "coveralls": "^3.0.2",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "enzyme-to-json": "^3.3.4",
    "jest": "^23.5.0",
    "lerna": "^3.0.1",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "reflect-metadata": "^0.1.10",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "resolutions": {
    "jest/**/jsdom": "11.11.0",
    "typedoc/typescript": "3.0.1"
  },
  "dependencies": {
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "react": "^16.4.2"
  }
}
