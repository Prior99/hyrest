{
  "name": "hyrest",
  "version": "0.2.2",
  "description": "A hybrid REST library for the frontend and backend.",
  "main": "dist/index.js",
  "author": "Frederick Gnodtke",
  "license": "MIT",
  "scripts": {
    "build": "tsc --sourceMap",
    "test": "jest",
    "lint": "tslint --format stylish --type-check --project tsconfig.json",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Prior99/hyrest"
  },
  "files": [
    "dist",
    "index.d.ts",
    "src",
    "LICENSE",
    "README.md",
    "example"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100
      }
    },
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "mapCoverage": true
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/http-status-codes": "^1.0.29",
    "@types/jest": "^21.1.7",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "express": "^4.16.2",
    "http-status-codes": "^1.3.0",
    "isomorphic-fetch": "^2.2.1",
    "path-to-regexp": "^2.1.0",
    "reflect-metadata": "^0.1.10"
  }
}
