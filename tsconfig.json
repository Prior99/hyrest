{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "outDir": "dist",
        "lib": ["es2016", "dom"],
        "baseUrl": "./src",
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules.",
        "dist/",
        "**/__tests__/*",
        "example/",
        "index.d.ts"
    ]
}
